        <attr name="pb_colorProgress" format="color" />
        <attr name="pb_colorComplete" format="color" />
        <attr name="pb_colorError" format="color" />
    </declare-styleable>
    
    <declare-styleable name="ActionProcessButtonTheme">
        <attr name="ProcessButtonStyle" format="reference" />
    </declare-styleable>

